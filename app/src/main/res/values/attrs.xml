<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
        <attr name="rightSwipe" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwipeMenuPLayout">
        <attr name="leftMenuId" format="reference" />
        <attr name="rightMenuId" format="reference" />
        <attr name="contentId" format="reference" />
    </declare-styleable>


    <declare-styleable name="SettingItemView">
        <!-- Define the title -->
        <attr name="title" format="string" />
        <!-- Define whether the button on the right is displayed -->
        <attr name="enable" format="boolean" />
    </declare-styleable>
    <declare-styleable name="DoubleTextView">
        <!-- Define the title -->
        <attr name="tv_title" format="string" />
        <!-- Define the title -->
        <attr name="tv_title_tv_size" format="dimension" />
        <!-- Define whether the button on the right is displayed -->
        <attr name="tv_content" format="string" />
        <attr name="show_right_icon" format="boolean" />
        <attr name="right_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="EditTextView">
        <!-- Define the title -->
        <attr name="et_title" format="string" />
        <!-- Define whether the button on the right is displayed -->
        <attr name="et_content" format="string" />
    </declare-styleable>

    <declare-styleable name="PagerItemView">
        <attr name="item_title" format="string" />
        <attr name="item_content" format="string" />
        <attr name="editable" format="boolean" />
    </declare-styleable>

    <!-- Drag bubble -->
    <declare-styleable name="MessageBubble">
        <attr name="radius" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="mbNumber" format="string" />
    </declare-styleable>

    <!--searchView-->
    <declare-styleable name="Search_View">
        <attr name="textSizeSearch" format="dimension" />
        <attr name="textColorSearch" format="color" />
        <attr name="textHintSearch" format="string" />
        <attr name="searchBlockHeight" format="integer" />
        <attr name="searchBlockColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color" />
        <attr name="laser_color" format="color" />
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color" />
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color" />
        <attr name="label_text" format="string" />
        <attr name="label_text_size" format="float" />
    </declare-styleable>

    <!--Flow layout-->
    <declare-styleable name="FlowLayout">
        <attr name="width_space" format="dimension" />
        <attr name="height_space" format="dimension" />
    </declare-styleable>

    <!--swipe-->
    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="leftEdgeSwipeOffset" format="dimension" />
        <attr name="rightEdgeSwipeOffset" format="dimension" />
        <attr name="topEdgeSwipeOffset" format="dimension" />
        <attr name="bottomEdgeSwipeOffset" format="dimension" />
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
        <attr name="clickToClose" format="boolean" />
    </declare-styleable>

    <attr name="colorText" format="reference|color" />
    <attr name="txtBackground" format="reference|color" />
    <attr name="btn_bg" format="reference|color" />
    <attr name="activity_bg" format="reference|color" />

    <!--裁剪图片-->
    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>

    <!--流式布局标签-->
    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"/>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ChatKeyboardLayout">
        <attr name="sendBtnBg" format="integer" />
        <attr name="orientation" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="0" />
        </attr>
    </declare-styleable>


    <!--分段view-->
    <declare-styleable name="SegmentControlView">
        <attr name="scv_BackgroundSelectedColor" format="reference|color" />//选中segment的背景颜色
        <attr name="scv_BackgroundNormalColor" format="reference|color" />//未选中segment的背景颜色
        <attr name="scv_TextSelectedColor" format="reference|color" />//选中segment的文字颜色
        <attr name="scv_TextNormalColor" format="reference|color" />//未选中segment的文字颜色
        <attr name="scv_FrameColor" format="reference|color" />//segment边框的颜色
        <attr name="scv_FrameWidth" format="reference|dimension" />//segment边框的宽度
        <attr name="scv_FrameCornerRadius" format="reference|dimension" />//segment四个圆角的半径大小
        <attr name="scv_TextSize" format="reference|dimension" />//文字大小
        <attr name="scv_TextArray" format="reference" />//string数组，每一个string都会填充到一个segment中
        <attr name="scv_SelectedIndex" format="reference|integer" />//默认选中的segment
        <attr name="scv_SegmentPaddingHorizontal" format="reference|dimension" />
        //每一个segment内部的水平padding
        <attr name="scv_SegmentPaddingVertical" format="reference|dimension" />
        //每一个Segment的竖直方向的padding
        <attr name="scv_Gradient" format="reference|boolean" />//Segment改变时是否使用颜色渐变效果
    </declare-styleable>

    <declare-styleable name="LoadingBar">
        <!-- 进度条样式，默认值为 system -->
        <attr name="loading_bar_mode" format="enum">
            <!-- 系统自带样式 -->
            <enum name="system" value="0"/>
            <!-- 水平进度条 -->
            <enum name="horizontal" value="1"/>
            <!-- 圆形进度条 -->
            <enum name="circle" value="2"/>
            <!-- 彗星进度条 -->
            <enum name="comet" value="3"/>
            <!-- 水波纹进度条 -->
            <enum name="wave" value="4"/>
        </attr>
        <!-- 文字颜色，默认值为 #70A800 -->
        <attr name="loading_bar_textColor" format="reference|color"/>
        <!-- 文字大小，默认值为 10sp -->
        <attr name="loading_bar_textSize" format="dimension"/>
        <!-- 文字和进度条之间的间距，默认值为 4dp -->
        <attr name="loading_bar_textMargin" format="dimension"/>
        <!-- 已完成进度的颜色，默认值为 #70A800 -->
        <attr name="loading_bar_reachedColor" format="reference|color"/>
        <!-- 已完成进度的高度，默认值为 2dp -->
        <attr name="loading_bar_reachedHeight" format="dimension"/>
        <!-- 未完成进度的颜色，默认值为 #CCCCCC -->
        <attr name="loading_bar_unReachedColor" format="reference|color"/>
        <!-- 未完成进度的高度，默认值为 1dp -->
        <attr name="loading_bar_unReachedHeight" format="dimension"/>
        <!-- 是否为圆角，默认值为 false -->
        <attr name="loading_bar_isCapRounded" format="boolean"/>
        <!-- 是否隐藏文字，默认值为 false -->
        <attr name="loading_bar_isHiddenText" format="boolean"/>
        <!-- 圆形进度条半径，默认值为 16dp -->
        <attr name="loading_bar_radius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="AileTheme">
        <attr name="sideBar" format="color" />
        <attr name="primaryColor" format="color" />
        <attr name="secondaryColor" format="color" />
        <attr name="unReadIndicatorColor" format="color" />
        <attr name="shadowBackgroundColor" format="color" />
        <attr name="topBackgroundColor" format="color" />
        <attr name="newChatRoomButtonColor" format="color" />
        <attr name="newChatRoomTextColor" format="color" />
        <attr name="todoHistoryButtonColor" format="color" />
        <attr name="todoHistoryTextColor" format="color" />
        <attr name="aileIconResource" format="reference" />
        <attr name="clContentCellResource" format="reference" />
        <attr name="civTopSmallIcon" format="reference" />
        <attr name="radioButtonResource" format="reference" />
        <attr name="radioButtonTransferResource" format="reference" />
        <attr name="createTenantCancelResource" format="reference" />
        <attr name="tenantGuarantorResource" format="reference" />
        <attr name="currentTenantCheckBoxResource" format="reference" />
        <attr name="accountTitle" format="string" />
        <attr name="aboutTitle" format="string" />
        <attr name="logoutTitle" format="string" />
        <attr name="logoutMessage" format="string" />
        <attr name="todoCreateButtonResource" format="reference" />
        <attr name="scannerConfirmResource" format="reference" />
        <attr name="todoIconResource" format="reference" />
        <attr name="loadMoreButtonColor" format="color" />
        <attr name="deleteAccountRbResource" format="reference" />
        <attr name="deleteAccountIconResource" format="reference" />
        <attr name="deleteAccountNextResource" format="reference" />
        <attr name="deleteAccountMessage" format="string" />
        <attr name="deleteAccountTitle" format="string" />
        <attr name="dragImageFloatingButtonResource" format="reference" />
        <attr name="isMuteImageColor" format="color" />
        <attr name="mediaPreviewSelectColor" format="color" />
        <attr name="mediaPreviewSendColor" format="color" />
        <attr name="serviceNumberConsultColor" format="color" />
        <attr name="personRoomAvatarBackgroundColor" format="color" />
    </declare-styleable>
</resources>