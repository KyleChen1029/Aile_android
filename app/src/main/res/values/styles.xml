    <style name="MyWindowAnimTheme">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="ios_bottom_dialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--背景透明度-->
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <style name="ios_bottom_dialog_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/ios_dialog_enter</item>
        <!-- 進入时的动画 -->
        <item name="android:windowExitAnimation">@anim/ios_dialog_exit</item>
        <!-- 退出时的动画 -->
    </style>

    <!-- 弹窗动画 由下至上 -->
    <style name="fade_dialog_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in_center</item>
        <!-- 進入时的动画 -->
        <item name="android:windowExitAnimation">@anim/fade_out_center</item>
        <!-- 退出时的动画 -->
    </style>

    <!-- 联络人列表icon   -->
    <style name="DividerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#efeff4</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="avatar">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="avatar.left" parent="avatar">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="avatar.right" parent="avatar">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="name.left">
        <item name="android:layout_below">@+id/msg_avatar_left</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="name.right">
        <item name="android:layout_below">@id/msg_avatar_right</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

