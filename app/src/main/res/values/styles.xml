<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:colorBackground">@color/black</item>-->
    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/MyWindowAnimTheme</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AiffTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/default_checkbox_style</item>
    </style>

    <style name="GreenWhiteCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/green_white_checkbox_style</item>
    </style>

    <style name="CheckboxThemeWithGreen" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/green_gray_checkbox_style</item>
    </style>


    <style name="WelcomeTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="secondaryColor">@color/colorPrimary</item>
        <!--item name="colorPrimaryDark">@color/colorPrimaryDark</item-->
        <item name="android:windowFullscreen">false</item>
        <!--item name="android:windowBackground">@drawable/app_intro_bg</item-->
    </style>


