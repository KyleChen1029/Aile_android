<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scopeSubFunctionProvisional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/bg_provisional_member_sub_dialog"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:textColor="@color/content_color"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@id/btnRemoveMember"
            app:layout_constraintStart_toStartOf="@id/btnChat"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnChat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/btn_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <Button
            android:id="@+id/btnMainPage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:background="@mipmap/btn_main_page"
            app:layout_constraintBottom_toBottomOf="@id/btnChat"
            app:layout_constraintStart_toEndOf="@id/btnChat"
            app:layout_constraintTop_toTopOf="@id/btnChat" />

        <Button
            android:id="@+id/btnRemoveMember"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/btn_remove_member"
            app:layout_constraintBottom_toBottomOf="@id/btnMainPage"
            app:layout_constraintStart_toEndOf="@id/btnMainPage"
            app:layout_constraintTop_toTopOf="@id/btnMainPage"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
