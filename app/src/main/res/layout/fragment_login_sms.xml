<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_login_cp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginTop="32dp"
            android:layout_marginStart="20dp"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_arrow_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo"
            android:layout_width="145dp"
            android:layout_height="76dp"
            android:layout_marginTop="102dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_image_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/please_enter_verify_code"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_sms_1"
                    android:maxLength="1"
                    android:inputType="number"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:background="@drawable/radius_rectangle_bg"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="50sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_marginStart="10dp"
                    android:id="@+id/edt_sms_2"
                    android:maxLength="1"
                    android:inputType="number"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:background="@drawable/radius_rectangle_bg"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="50sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_marginStart="10dp"
                    android:id="@+id/edt_sms_3"
                    android:maxLength="1"
                    android:inputType="number"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:background="@drawable/radius_rectangle_bg"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="50sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_marginStart="10dp"
                    android:id="@+id/edt_sms_4"
                    android:maxLength="1"
                    android:inputType="number"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:background="@drawable/radius_rectangle_bg"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="50sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_marginStart="10dp"
                    android:id="@+id/edt_sms_5"
                    android:maxLength="1"
                    android:inputType="number"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:background="@drawable/radius_rectangle_bg"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="50sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_marginStart="10dp"
                    android:id="@+id/edt_sms_6"
                    android:maxLength="1"
                    android:inputType="number"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:background="@drawable/radius_rectangle_bg"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="50sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_resend_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/please_enter_when_not_receive"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/resend"
                    android:textColor="#0076ff"
                    android:textSize="13sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xmlid_326"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
