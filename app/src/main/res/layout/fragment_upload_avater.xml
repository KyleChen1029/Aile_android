<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/registered_bg2">

        <tw.com.chainsea.custom.view.image.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/custom_default_avatar" />

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/iv_avatar"
            android:contentDescription="@null"
            android:layout_alignBottom="@+id/iv_avatar"
            android:src="@drawable/slector_camera" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_avatar"
            android:text="為自己添加頭像照，方便朋友認出您喔"
            tools:ignore="HardcodedText"
            android:textColor="#f0485d"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_nick"
            android:hint="請輸入您的暱稱"
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:minWidth="300dp"
            android:padding="11dp"
            android:inputType="text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/radius_rectangle_bg"
            android:textSize="15sp"
            android:maxEms="20"
            android:textColorHint="#9B9B9B"
            android:singleLine="true"
            android:layout_below="@+id/hint" />

    </RelativeLayout>
</layout>
