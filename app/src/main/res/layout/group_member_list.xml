<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="tw.com.chainsea.ce.sdk.bean.account.UserProfileEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scopeAvatar"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <tw.com.chainsea.ce.sdk.customview.AvatarIcon
                android:id="@+id/ivAvatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/ic_new_head" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ivAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="11sp"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginVertical="5dp"
                android:textColor="@color/black"
                android:text="@{item.nickName}"
                tools:text="宋仲基11111"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ivPrivilege"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@null"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/scopeAvatar"
            app:layout_constraintStart_toStartOf="@id/scopeAvatar"
            tools:src="@drawable/ic_owner"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>