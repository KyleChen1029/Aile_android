<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    android:layout_width="248dp"
    android:layout_height="wrap_content">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_multi_template_list"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:nestedScrollingEnabled="false"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_single_template"
        android:background="@drawable/bg_todo_alarm_alert"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:shapeAppearance="@style/TopCorner"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/txt_title"
        android:textColor="#4a4a4a"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/txt_content"
        android:textColor="#4a4a4a"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line_top"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/layout_button_h"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btn_0_h"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#4a4a4a"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <View
            android:id="@+id/line_0_h"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="#ebebeb"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/btn_1_h"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#4a4a4a"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <View
            android:id="@+id/line_1_h"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="#ebebeb"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/btn_2_h"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#4a4a4a"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_button_v"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btn_0_v"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="#4a4a4a"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <View
            android:id="@+id/line_0_v"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/btn_1_v"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="#4a4a4a"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <View
            android:id="@+id/line_1_v"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/btn_2_v"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="#4a4a4a"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
</layout>