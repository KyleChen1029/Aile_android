<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="ResourceName">
    <!--Click effect-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- android:radius Radius of arc -->
            <solid android:color="@color/bgColor_alert_button_press"/>
            <corners android:bottomLeftRadius="@dimen/radius_alertview" android:bottomRightRadius="@dimen/radius_alertview"/>
        </shape>
    </item>
    <item android:drawable="@android:color/transparent" />
</selector>
